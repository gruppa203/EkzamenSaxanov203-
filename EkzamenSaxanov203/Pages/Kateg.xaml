<Page x:Class="EkzamenSaxanov203.Pages.Kateg"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EkzamenSaxanov203.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Kateg">

    <Grid>
        <DataGrid>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Производитель" Binding="{Binding Proizvoditel_Tovar.Proizvoditel}"/>
                <DataGridTextColumn Header="Стоимость" Binding="{Binding Stoimost_Tovar}"/>
                <DataGridTextColumn Header="Скидка" Binding="{Binding Maks_Skidka_Tovar}"/>
                <DataGridTextColumn Header="Описание" Binding="{Binding Opisanie_Tovar}"/>
                <DataGridTextColumn Header="Картинка" Binding="{Binding Izobrajenie_Tovar}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
